<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Mengkonfigurasi layout AutoComplete-->
    <!-- Disini saya mengkonfigurasi lebar, tinggi, margin awal, atas, dan akhir-->
    <AutoCompleteTextView
        android:id="@+id/actv"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSimpan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- Mengkonfigurasi Button -->
    <!-- Disini saya mengatur lebar, tinggi, margin awal, atas, dan akhir lalu mengatur text menjadi simpan-->
    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/Simpan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toEndOf="@+id/actv"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Mengkonfigurasi Button -->
    <!-- Disini saya mengkonfigurasi lebar, tinggi, margin awal, atas, dan akhir-->
    <Spinner
        android:id="@+id/sp1"
        android:layout_width="391dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actv"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- Mengkonfigurasi ListView -->
    <!-- Disini saya mengkonfigurasi lebar, tinggi, margin awal, atas, dan akhir-->
    <ListView
        android:id="@+id/lv1"
        android:layout_width="409dp"
        android:layout_height="609dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp1" />

</androidx.constraintlayout.widget.ConstraintLayout>